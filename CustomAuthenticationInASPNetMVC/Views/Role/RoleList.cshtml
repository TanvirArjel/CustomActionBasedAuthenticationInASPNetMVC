@model IEnumerable<CustomAuthenticationInASPNetMVC.Models.Role>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <span>
            Role List
        </span>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Actions</th>
            </tr>
            @{
                if (Model.Any())
                {
                    foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "UpdateRole", new { id=item.RoleId }) |
                                @Html.ActionLink("Details", "RoleDetails", new { id=item.RoleId }) |
                                @Html.ActionLink("Delete", "DeleteRole", new { id=item.RoleId })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="3">No data found!</td></tr>
                }
            }
            

        </table>
        <div class="text-center">
            <a class="btn btn-primary" href="@Url.Action("Index","Security")">Back to Security</a>
        </div>
    </div>
</div>

