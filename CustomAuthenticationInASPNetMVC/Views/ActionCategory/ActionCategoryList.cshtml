@model IEnumerable<CustomAuthenticationInASPNetMVC.Models.ActionCategory>

@{
    ViewBag.Title = "Index";
}

<br/>

<div class="panel panel-primary">
    <div class="panel-heading">
        <span>Action Category List</span>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ActionCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Actions</th>
            </tr>
            @{
                if (Model.Any())
                {
                    foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActionCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "UpdateActionCategory", new { id=item.ActionCategoryId }) |
                                @Html.ActionLink("Details", "ActionCategoryDetails", new { id=item.ActionCategoryId }) |
                                @Html.ActionLink("Delete", "DeleteActionCategory", new { id=item.ActionCategoryId })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="3">No date found!</td></tr>
                }
            }
           

        </table>
        <div class="text-center">
            <a class="btn btn-primary" href="@Url.Action("Index","Security")">Back to Security</a>
        </div>
    </div>
</div>


