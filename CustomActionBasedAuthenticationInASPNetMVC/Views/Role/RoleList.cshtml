@model IEnumerable<CustomActionBasedAuthenticationInASPNetMVC.Models.Role>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <span style="font-size: 25px">
            <strong> Role List</strong>
        </span>
        <a class="btn btn-success pull-right" href="@Url.Action("CreateRole")">Create Role</a>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Actions</th>
            </tr>
            @{
                if (Model.Any())
                {
                    foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a class="btn btn-xs btn-primary" href="@Url.Action("UpdateRole", new {id = item.RoleId})">Edit</a>
                                <a class="btn btn-xs btn-info" href="@Url.Action("RoleDetails",new {id = item.RoleId})">Details</a>
                                <a class="btn btn-xs btn-danger" href="@Url.Action("DeleteRole",new {id = item.RoleId})">Delete</a>
                                
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="3">No data found!</td></tr>
                }
            }
            

        </table>
        <div class="text-center">
            <a class="btn btn-primary" href="@Url.Action("Index","Security")">Back to Security</a>
        </div>
    </div>
</div>

